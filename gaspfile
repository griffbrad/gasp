<?php

/* @var $gasp Gasp\Run */

$gasp->sniff()
    ->setPhpcs('./vendor/bin/phpcs')
    ->setStandard('PSR2')
    ->addPath('Gasp');

$gasp->lint()
    ->setPhp('/usr/bin/php')
    ->addPath('Gasp');

$gasp->watch()
    ->setClear(true)
    ->addTask('qa', 'Gasp')
    ->addTask('vagrant.sync', '.');

$gasp->task('qa', ['sniff', 'lint']);

