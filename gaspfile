<?php

/* @var $gasp Gasp\Run */

use Gasp\Result\Aggregate;

$gasp->sniff()
    ->setPhpcs('./vendor/bin/phpcs')
    ->setStandard('PSR2')
    ->addPath('Gasp');

$gasp->lint()
    ->setPhp('/usr/bin/php')
    ->addPath('Gasp');

$gasp->phpunit()
    ->setPhpunit('./vendor/bin/phpunit')
    ->setPath('tests')
    ->setCoverageThreshold(95);

$gasp->watch()
    ->setClear(true)
    ->addTask('qa', 'Gasp');

$gasp->task('qa', ['phpunit', 'sniff', 'lint']);
